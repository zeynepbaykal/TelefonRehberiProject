<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - TelefonRehberiWeb</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/bootstrapWatch.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/TelefonRehberiWeb.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
			<div class="container-fluid">
				<a class="navbar-brand" href="#">Telefon Rehberi</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarColor01">
					<ul class="navbar-nav me-auto">

						@if (Context.Session.GetString("userId") != null)
                        {


						@*<li class="nav-item">
							<a class="nav-link active" href="#">
								Home
								<span class="visually-hidden">(current)</span>
							</a>
						</li>*@
						<li class="nav-item">
							<a class="nav-link" href="../../Rehber">Rehber</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="../../Rehber/Add">Yeni Kayıt</a>
						</li>
						@*<li class="nav-item">
							<a class="nav-link" href="#">About</a>
						</li>*@
						}
					</ul>
					<form class="d-flex" action="../../Rehber/Search" method="post">
						@if (Context.Session.GetString("userId") != null)
                        {
						<input class="form-control me-sm-2" type="text" placeholder="Search" name="search">
						<button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
						}
					</form>
				</div>
			</div>
		</nav>		
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		@*<div class="container">
			&copy; 2022 - TelefonRehberiWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>*@
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
